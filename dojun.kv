ScreenManager:
    MainScreen:
        name: "main"
    DetailScreen:
        name: "detail"


<MainScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 0
        padding: 0

        # =========================
        # 상단 헤더
        # =========================
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(90)
            padding: dp(10)
            spacing: dp(10)
            md_bg_color: 0.1, 0.45, 0.85, 1

            Image:
                source: "assets/union_logo.png"
                size_hint_x: None
                width: dp(70)
                allow_stretch: True
                keep_ratio: True

            MDLabel:
                text: "이번 주 노사 핵심 쟁점"
                font_name: "Nanum"
                halign: "center"
                valign: "middle"
                bold: True
                font_size: dp(22)
                color: 1, 1, 1, 1

        # =========================
        # 탭 메뉴
        # =========================
        MDTabs:
            id: tabs
            size_hint_y: None
            height: dp(48)
            background_color: 0.13, 0.58, 0.92, 1

            Tab:
                title: "전체"
            Tab:
                title: "회사안"
            Tab:
                title: "조합안"

        # =========================
        # 리스트 영역 (공백 해결 핵심)
        # =========================
        ScrollView:
            do_scroll_x: False

            MDList:
                id: issue_list
                padding: dp(4)
                spacing: dp(4)
                adaptive_height: True


<DetailScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "이번 주 노사 핵심 쟁점"
            right_action_items: [["arrow-left", lambda x: app.go_main()]]


        ScrollView:
            do_scroll_x: False

            MDBoxLayout:
                id: detail_box
                orientation: "vertical"
                spacing: dp(12)
                padding: dp(12)
                adaptive_height: True
